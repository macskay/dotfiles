###
# Misc
###

alias c='clear'
alias tr='sudo ./tomcat restart'
alias svim='sudo vim'
alias fhere='find . -name'
alias mkdir='mkdir -pv'

###
# Grep
###

alias grep='grep --color=auto'

###
# Listings
###

alias ls='ls --color=auto'
alias ll='ls -l --color=auto'
alias la='ls -al --color=auto'
alias lt='ls -alt --color=auto'
alias lg='ls -al | grep'

###
# Processes
###

alias pg='ps aux | grep'

###
# Git
###

alias git='LANG=en_US git'
alias gs='git status'
alias ga='git add'
alias gpl='git pull'
alias gch='git checkout'
alias gcl='git clone'
alias gps='git push'
alias gc='git commit'


###
# Directory
###

alias cd..='cd ..'
alias .2='cd ..'
